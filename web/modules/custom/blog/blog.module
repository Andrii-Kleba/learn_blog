/**
 * Implements hook_imagemagick_arguments_alter().
 */
function blog_imagemagick_arguments_alter(ImagemagickExecArguments $arguments, $command) {
  $arguments->add('-sampling-factor 4:2:0')
    ->add('-interlace Plane')
    ->add('-strip');
}
